#!/bin/sh
#Install Need Dep
if [ $LANG=zh_CN.UTF-8 ]; then
  echo "安装编译内核时需要的依赖包"
else
  echo "Installation of kernel basic build dependencies"
fi
if [ $OS=debian ]; then
$SUDO apt-get build-dep linux-image-$(KERNEL_VERSION) -y
$SUDO apt-get install libelf-dev libssl-dev -y
else if [ $OS=redhat ]; then
$SUDO yum groupinstall "Development Tools" -y
$SUDO yum install openssl-devel -y
fi
fi

if [ $LANG=zh_CN.UTF-8 ]; then
  echo "下载Linux内核源码"
else
  echo "Dowload Linux kernel Source"
fi
git clone --depth 1 https://github.com/torvalds/linux.git
cd linux
yes "" | make oldconfig
echo "CONFIG_TCP_CONG_BBR=y" >> .config
echo "CONFIG_DEFAULT_BBR=y" >> .config
make
make modules
$SUDO make modules_install
$SUDO make install
cd ..

#Enable BBR
if [ $LANG=zh_CN.UTF-8 ];
then
  echo "开启BBR"
else
  echo "BBR ENABLED"
fi
$SUDO echo "tcp_bbr" >> /etc/modules-load.d/modules.conf
$SUDO echo "net.core.default_qdisc=fq" >> /etc/sysctl.conf
$SUDO echo "net.ipv4.tcp_congestion_control=bbr" >> /etc/sysctl.conf

unset VM
